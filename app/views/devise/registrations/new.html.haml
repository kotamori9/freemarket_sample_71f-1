.registrationHeader
  .registrationHeader__contents
    .header__contents__logo
      = link_to image_tag("logo.png", size: :'140x40', class: "registrationHeader__contents__logo__icon"), "/"
    .registrationHeader__contents__status
.registrationBody
  .registrationBody__title
    %h2 新規会員登録
  .registrationBody__form
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = render "devise/shared/error_messages", resource: resource
      .registrationBody__form__field
        = f.label :"ニックネーム"
        %em 必須
        %br/
        = f.text_field :nickname, autofocus: true, autocomplete: "nickname",placeholder: "例）フリマ太郎",style: "width:300px; height:50px;"
      .registrationBody__form__field
        = f.label :"メールアドレス"
        %em 必須
        %br/
        = f.email_field :email, autofocus: true, autocomplete: "email",placeholder: "PC・携帯どちらでも可",style: "width:300px; height:50px;"
      .registrationBody__form__field
        = f.label :"生年月日"
        %em 必須
        %br/
        = f.date_field :birthday, autocomplete: "off",placeholder: "例)20200319",style: "width:300px; height:50px;"
      .registrationBody__form__field
        = f.label :"氏名"
        %em 必須
        %br/
        = f.text_field :last_name, autocomplete: "family-name",placeholder: "苗字",style: "width:140px; height:50px;"
        = f.text_field :first_name, autocomplete: "given-name",placeholder: "名前",style: "width:140px; height:50px;"
      .registrationBody__form__field
        = f.label :"氏名（ひらがな）"
        %em 必須
        %br/
        = f.text_field :last_name_furigana, autocomplete: "family-name",placeholder: "みょうじ",style: "width:140px; height:50px;"
        = f.text_field :first_name_furigana, autocomplete: "given-name",placeholder: "なまえ",style: "width:140px; height:50px;"
      .registrationBody__form__field
        = f.label :"クレジットカード情報"
        %em 必須
        %br/
        = f.text_field :credit_card, autocomplete: "cc-number",placeholder: "スペースをつけず16桁",style: "width:300px; height:50px;"
      .registrationBody__form__field
        = f.label :"電話番号"
        %br/
        = f.telephone_field :tell, autocomplete: "tel",placeholder: "例）09011112222",style: "width:300px; height:50px;"
      .registrationBody__form__field
        = f.label :"パスワード"
        %em 必須
        %br/
        = f.password_field :password, autocomplete: "off",placeholder: "7文字以上の半角英数字",style: "width:300px; height:50px;"
      .registrationBody__form__field
        = f.label :"パスワード確認"
        %br/
        = f.password_field :password_confirmation, autocomplete: "off",placeholder: "再入力",style: "width:300px; height:50px;"
      .registrationBody__form__actions
        = f.submit "登録", class: 'button'
    = render "devise/shared/links"
    .registrationBody__form__text
      %h3「登録」のボタンを押すことにより、
      %a{:href => "/"}利用規約
      に同意したものとみなします
      %br/
.registrationFooter
  .registrationFooter__contents
    .registrationFooter__contents__top
      %ur
        %li プライバシーポリシー
        %li フリマ利用規約
        %li 特定商取引に関する表記
    .registrationFooter__contents__logo
      %ur
        %li ©frima, Inc.
