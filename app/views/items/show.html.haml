.all
  .wrapper
    = render "/shared/header"

  .main
    .main__show
      .main__show__contents
        .top__contents
          .item__box
            .product
              商品：
              = @item.name
            .img__box
              -# - @items.zip(@photos).each do |item, photo|             
              = image_tag "stake.png", size: "560x346"
              .img__box1
                = image_tag "stake.png", size: "140x87"
                = image_tag "stake.png", size: "140x87"
                = image_tag "stake.png", size: "140x87"
            .price__box
              .price1
                = @item.price
              .price2
                (税込)送料込み
            .detail
              = simple_format @item.description              
            .table
              .table__left
                .left1
                  %a
                    出品者
                .left2
                  %a
                    カテゴリー
                .left3
                  %a
                    ブランド
                .left4
                  %a
                    配送料
                .left5
                  %a
                    地域
                .left6
                  %a
                    発送目安
              .table__right
                .right1
                  %a
                    = @item.user
                .right2
                  %a
                    = @item.category_id
                .right3
                  %a
                    = @item.brand
                .right4
                  %a
                    = @item.shipping_charges
                .right5
                  %a
                    = @item.area
                .right6
                  %a
                    = @item.days_to_ship   
            .tag
              - if user_signed_in? && current_user.id == @item.saler_id
                .left
                  =link_to edit_item_path(@item.id) do
                    = fa_icon 'star'
                    商品を編集する

                .right
                  =link_to item_path, method: :delete do
                    -# %ul
                    -#   %a
                    -#     = fa_icon 'flag'
                    ="商品を削除する"
              - elsif user_signed_in?
                .center
                  =link_to "/" do
                    %ul
                      %a
                        = fa_icon 'star'
                        = '商品を購入する'    

                -# .right  
                -#   =link_to destroy_user_session_path, method: :delete do
                -#     %ul
                -#       %a
                -#         ='商品を削除する'
            
          .middle__contents
            .content
              .text
              -#  = form_with  root do |form|
              -#  = form.text_area :text, placeholder: "No Message"

              .text2
                コメントの履歴
              .button
                %ul
                  %i
                    = fa_icon 'comment'
                  %a
                    コメントする
        .option__area
          .left 
            ＜前の商品
          .right    
            後ろの商品＞      
        .relateditems 
          商品をもっと見る
    -# .footer
    -#   = render "/shared/bunner"        
    .footer
      = render "/shared/footer"